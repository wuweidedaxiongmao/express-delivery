<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot.mapper.StudentMapper">
    <select id="selectAll" resultType="com.example.springboot.entity.Student">
        SELECT * FROM student
            <where>
                <if test="name != null">
                    name like concat('%',#{name},'%')
                </if>
            </where>
            order by id asc
    </select>
    
    <insert id="insert" parameterType="com.example.springboot.entity.Student">
        INSERT INTO `student` (`username`,`password`,`name`,`avatar`,`phone`,`email`,`role`,`money`,`add_money`,`level`,`rating`,`rating_count`,`order_count`,`created_at`,`updated_at`)
        VALUES (#{username},#{password},#{name},#{avatar},#{phone},#{email},#{role},#{money},#{addMoney},#{level},#{rating},#{ratingCount},#{orderCount},#{createdAt},#{updatedAt})
    </insert>

    <update id="updateById" parameterType="com.example.springboot.entity.Student">
        update `student`
        <set>
            <if test="username != null">username=#{username},</if>
            <if test="password != null">password=#{password},</if>
            <if test="name != null">name=#{name},</if>
            <if test="avatar != null">avatar=#{avatar},</if>
            <if test="phone != null">phone=#{phone},</if>
            <if test="email != null">email=#{email},</if>
            <if test="role != null">role=#{role},</if>
            <if test="money != null">money=#{money},</if>
            <if test="addMoney != null">add_money=#{addMoney},</if>
            <if test="level != null">level=#{level},</if>
            <if test="rating != null">rating=#{rating},</if>
            <if test="ratingCount != null">rating_count=#{ratingCount},</if>
            <if test="orderCount != null">order_count=#{orderCount},</if>
            <if test="createdAt != null">created_at=#{createdAt},</if>
            <if test="updatedAt != null">updated_at=#{updatedAt},</if>
        </set>
        where id=#{id}
    </update>
</mapper>